@using OnlineTicariOtomasyon.Models.Classes;
@model Current

@{
    ViewData["Title"] = "EditCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <h2>Cari Güncelleme Sayfası</h2>



<form asp-action="EditCurrent" method="post" enctype="multipart/form-data">
     <div>
         <input asp-for="CurrentId" hidden />
     </div>

    <div class="form-group">
        <label>Ad</label>
        <input asp-for="CurrentName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="CurrentLastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şehir</label>
        <input asp-for="CurrentCity" class="form-control" />
        @Html.ValidationMessageFor(x => x.CurrentCity, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Mail</label>
        <input asp-for="CurrentMail" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" asp-for="CurrentPassword" value="@ViewBag.pass" class="form-control" style="align-content:center;"/>
    </div>
   @Html.DropDownListFor(x=>x.Gender,(IEnumerable<SelectListItem>)ViewBag.dgr1,"Cinsiyet Şeçiniz",new{@class="form-control"})
    <br />
    <div class="form-group">
        <input type="file" asp-for="CurrentImage"  />
    </div>
     
        <button type="submit" class="btn btn-primary">Güncelle</button>
     
 </form>
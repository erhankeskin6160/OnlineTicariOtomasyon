  
 @using OnlineTicariOtomasyon.Models.Classes

 @model List<Category>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html >
<head>
    <title></title>
</head>
<body>
    <table class="table table-striped table-dark mt-2">

        <tr>
            <th class="col-1">ID</th>
            <th class="col-9 text-center">Kategori Adı</th>
            <th class="col-1">Sil</th>
            <th class="col-2">Düzenle</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.CategoryId</td>
                <td class="text-center">@item.Name</td>
                <td><a href="/Category/CategoryDelete/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/CategoryEdit/@item.CategoryId" class="btn btn-warning">Düzenle</a></td>
               
            </tr>
        }



    </table>
    <a href="/Category/CategoryAdd" class="btn btn-primary">Kategori Ekle  </a>
</body>
</html>

